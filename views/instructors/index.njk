{% extends "layout.njk" %}

{% block main %}

<div class="card table-container">
  <table>
    <thead>
      {# Linhas no Head #}
      <tr>
        {# Colunas no Head #}
        <th>Instrutor</th>
        <th>Serviçoes</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      {% for item in instructors %}
       {# Linhas no Body #}
        <tr>
        {# Colunas no Body #}
          <td>
            <span style="background-image: url({{item.avatarURL}})"></span>
            <div class="nameTable">{{item.name}}</div>
          </td>
          <td>
          {% for item in item.services %}
            <a class="servicesTable" href="">{{item}}</a>
          {% endfor %}
          </td>
          <td><a class='buttonTable' href="/instructors/{{item.id}}" target='-blank'>Ver</a></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

{% endblock %}
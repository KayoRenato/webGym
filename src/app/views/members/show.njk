{% extends "layout.njk" %}

{% block main %}

<div class="card">
  <section class="avatar" style= "background: url({{member.avatar_url}}) no-repeat center center / cover "></section>
  <section class="details">

  <h3>Detalhes</h3>

  <div class="item">
    <div>Aluno</div>
    <div>{{member.name}}</div>
  </div>

  <div class="item">
    <div>Email</div>
    <div>{{member.email}}</div>
  </div>

  <div class="item">
    <div>Idade</div>
    <div>{{member.age}}</div>
  </div>

  <div class="item">
    <div>Data de Ativersário</div>
    <div>{{member.birth}}</div>
  </div>

  <div class="item">
    <div>Sexo</div>
    <div>{{"Masculino" if member.gender == 'M' else "Feminino"}}</div>
  </div>

  <div class="item">
    <div>Tipo Sanguíneo</div>
    <div>{{member.blood}}</div>
  </div>

  <div class="item">
    <div>Altura</div>
    <div>{{member.height}}</div>
  </div>

  <div class="item">
    <div>Peso</div>
    <div>{{member.weight}}</div>
  </div>

  <div class="item">
    <div>Acompanhamento</div>
    <div>
      {% for item in member.services %}
        <span>{{item}}</span>
      {% endfor %}
    </div>
  </div>

  <div class="item">
    <div>Aluno de</div>
    <div>{{member.instructor_name}}</div>
  </div>

  <div class="item">
    <div>Desde</div>
    <div>{{member.create_at}}</div>
  </div>
  <a href="/members/{{member.id}}/edit" class="button">Editar</a>

</section>
</div>

{% endblock %}
{% extends "layout.njk" %}

{% block main %}

<div class="card table-container">
<div class="header">
    <a class="buttonTable" href="/members/create">Novo</a>
    
    <form action="/members" method="GET">
      <input 
        type="text"
        name="filter"
        placeholder="Aluno"
        value="{{filter}}"
      >
      <button type="submit">Pesquisar</button>
    </form>
  </div>

  <table>
    <thead>
      {# Linhas no Head #}
      <tr>
        {# Colunas no Head #}
        <th>Aluno</th>
        <th>Email</th>
        <th>Serviços Desejados</th>
        <th>Altura (cm)</th>
        <th>Peso (kg)</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      {% for item in members %}
       {# Linhas no Body #}
        <tr>
        {# Colunas no Body #}
          <td>
            <span style="background-image: url({{item.avatar_url}})"></span>
            <div class="nameTable">{{item.name}}</div>
          </td>
          <td>
            <a class="emailTable" href="mailto:{{item.email}}">{{item.email}}</a>
          </td>
          <td>
          {% for item in item.services %}
            <a class="servicesTable" href="">{{item}}</a>
          {% endfor %}
          </td>
          <td>
            <div class="heightTable">{{item.height}}</div>
          </td>
          <td>
            <div class="weightTable">{{item.weight}}</div>
          </td>
          <td><a class='buttonTable' href="/members/{{item.id}}" target='_blank'>Ver</a></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
<div 
    class="pagination" 
    data-page = {{pagination.page}} 
    data-total = {{pagination.total}}
    data-filter = {{filter}}
  ></div>
</div>

{% endblock %}
{% extends "layout.njk" %}

{% block main %}

<div class="card">
  <section class="avatar" style= "background: url({{instructor.avatarURL}}) no-repeat center center / cover "></section>
  <section class="details">

  <h3>Detalhes</h3>

  <div class="item">
    <div>Instrutor</div>
    <div>{{instructor.name}}</div>
  </div>

  <div class="item">
    <div>Idade</div>
    <div>{{instructor.birth}}</div>
  </div>

  <div class="item">
    <div>Sexo</div>
    {# {{"Masculino" if instructor.gender == 'M' else "Feminino"}} #}
    <div>{{instructor.gender}}</div>
  </div>

  <div class="item">
    <div>Acompanhamento</div>
    <div>
      {% for item in instructor.services %}
        <span>{{item}}</span>
      {% endfor %}
    </div>
  </div>
  <div class="item">
    <div>Desde</div>
    <div>{{instructor.createdAt}}</div>
  </div>
  <a href="/instructors/{{instructor.id}}/edit" class="button">Editar</a>

</section>
</div>

{% endblock %}